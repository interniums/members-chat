extends layout 

block content
  h1.header-text Sign-up form
  div.sign-up-container
    form.form-container(method='POST')
      div.form-group
        div
          div
            lable(for='username_up') Username: 
          input#username_up.input(type='text', placeholder='...', required, name='username_up')
        div
          div 
            lable(for='password_up') Password:
          input#password_up.input(type='text', placeholder='...', required, name='password_up')
        div 
          div 
            lable(for='password_confirm_up') Confirm password:
          input#password_confirm_up.input(type='text', placeholder='...', required, name='password_confirm_up')
        button.button(type='submit') Submit
  div
    if errors.length > 0 
      each error in errors 
        h3= error.msg
      